<?xml version="1.0" encoding="utf-8"?>
<launch>

  <!--rosparam command="dump" param="/quadruped_description" file="$(env HOME)/logs/raw/anymal_description.yaml" /-->


  <!--Note: recording location consistent with the ORI Anymal wiki page:
      https://wiki.oxfordrobots.com/display/DRS/Anymal-->
  <node name="rosbag" pkg="rosbag" type="record"
    args="-o $(env HOME)/logs/raw/carla.bag
    --chunksize=15360 --split --size=10240 --buffsize=2048

    /carla/ego_vehicle/odometry
    /carla/ego_vehicle/rgb_front/camera_info
    /carla/ego_vehicle/rgb_front/image
    /carla/ego_vehicle/semantic_segmentation_front/camera_info
    /carla/ego_vehicle/semantic_segmentation_front/image

    
    " output="screen">
  </node>
</launch>
